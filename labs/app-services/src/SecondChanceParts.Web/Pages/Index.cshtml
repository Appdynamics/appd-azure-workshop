@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Second Chance Parts</h1>
    <div style="display:flex;align-items:center;justify-content:center">
        <div style="width:500px">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Your Name</label>
                    <input asp-for="ShoppingCart.Username" class="form-control" />
                    <span asp-validation-for="ShoppingCart.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Start Shopping" class="btn btn-primary" />
                </div>
            </form>
            
        </div>
    </div>
   
</div>
